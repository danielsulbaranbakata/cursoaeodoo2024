<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- sport.clinic tree view -->
    <record id="sport_clinic_view_tree" model="ir.ui.view">
        <field name="name">sport.clinic.view.tree</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="phone"/>
                <field name="available"/>
                <field name="email"/>
                <field name="issue_ids"/>
            </tree>
        </field>
    </record>

    <!-- sport.clinic form view -->
    <record id="sport_clinic_view_form" model="ir.ui.view">
        <field name="name">sport.clinic.view.form</field>
        <field name="model">sport.clinic</field>
        <field name="arch" type="xml">
            <form string="Clinic">
                <header>
                    <button name="action_check_assistance" type="object" string="Confirm assistance"/>
                </header>
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="available"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                    <notebook>
                        <page string="Issues" name="issues">
                            <field name="issue_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="clinic_id"/>
                                    <field name="tag_ids" widget="many2many_tags"/>
                                    <field name="assistance" widget="boolean_toggle"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>